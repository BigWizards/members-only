<div class="column is-three-fifths is-offset-one-fifth">
  <div class="block">
    <% if user_signed_in? %>
      <%= render "posts/form" %>
    <% end %>
  </div>

    <% @posts.each do | post | %>
      <div class="box">
        <div class="content">
          <strong class="title"><%= post.title %></strong><br/>
          <% if user_signed_in? %>
            <small class="subtitle">By <%= post.author %></small><br/>
          <% end %>
          <p><%= post.content %></p>
        </div>
         
        <% if user_signed_in? && current_user.username == post.author%>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to edit_post_path(post), class: "level-item" do %>
                <span class="icon"><i class="fa fa-edit" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" } do %>
                <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
              <% end %>
            </div>
          </nav>
        <% end %>
      </div>
    <% end %>
</div>