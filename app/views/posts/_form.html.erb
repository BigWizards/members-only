<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<ul>
  <% @post.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "A worthy title is needed", input_html: { class: "input" }, 
    wrapper: false, label_html: {class: "label"}, placeholder: "Your title", autofocus: true %>
  </div>
</div>
<% f.input :author, as: :hidden, input_html: { value: current_user.username } %>
<div class="field">
  <div class="control">
    <%= f.input :content, as: :text, label: "Tell a new story", input_html: { class: "textarea"}, 
    wrapper: false, label_html: {class: "label"}, placeholder: "There once was a hole in the ground..." %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.button :submit, class: "button is-primary" %>
  </div>
</div>
<% end %>